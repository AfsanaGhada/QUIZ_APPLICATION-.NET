                                    </div>
                                    <div class="mb-3">
                                        <label for="questionID" class="form-label">Question ID</label>
                                        <input asp-for="QuestionID" type="number" class="form-control">
                                        <span asp-validation-for="QuestionID" class="form-text text-muted"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="userID" class="form-label">User ID</label>
