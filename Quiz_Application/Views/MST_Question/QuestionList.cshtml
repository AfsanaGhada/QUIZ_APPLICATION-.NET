@model DataTable
@using System.Data
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Question List </h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-Controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active">Data</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <div>
                            <h5 class="card-title">Search Question</h5>

                            <form class="row g-3">
                                <div class="col-md-4">
                                    <label for="questionlevelid" class="form-label">Question Level </label>
                                    <select class="form-control">
                                        <option value="">Select Level</option>

                                        <option value="1">Easy</option>
                                        <option value="2">Midium</option>
                                        <option value="3">Hard</option>

                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="userName" class="form-label"> Question</label>

                                    <input type="text" class="form-control  border border-black" placeholder="Enter Question">
                                </div>
                                <div class="col-md-4">
                                    <label for="userName" class="form-label">Min Marks</label>

                                    <input type="text" class="form-control  border border-black">
                                </div>
                                <div class="col-md-4">
                                    <label for="userName" class="form-label">Max Marks</label>

                                    <input type="text" class="form-control  border border-black">
                                </div>
                                <div class="text-start">
                                    <button type="submit" class="btn btn-success">Search</button>
                                    <button type="reset" class="btn btn-danger">Reset</button>
                                </div>
                            </form><!-- End No Labels Form -->
                        </div>

                        </div>

                        </div>
                        </div>
                        </div>
                        </section>

            <br />

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                       
                            

                      

                        <div class="overflow-x-scroll">
                        <!-- Table with stripped rows -->
                        <table class="table datatable" class="display nowrap " style="width:100%" >
                                <h2 class="p-3">Question List</h2>
                                <div class="d-flex justify-content-end">
                                    <a asp-controller="MST_Question" asp-action="QuestionForm" class="btn btn-primary w-20">
                                        <i class="bi bi-plus"></i> Add Question
                                    </a>
                                </div>
                            <thead>
                                <tr>
                                    <th>Question ID</th>
                                    <th>Question Text</th>
                                    <th>Question Level </th>
                                    <th>Option A</th>
                                    <th>Option B</th>
                                    <th>Option C</th>
                                    <th>Option D</th>
                                    <th>Correct Option</th>
                                    <th>Question Marks</th>
                                    <th> Active</th>
                                    <th>User Name</th>

                                    <th>Created</th>
                                    <th>Modified</th>
                                     <th>Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                    @foreach (DataRow dataRow in Model.Rows)
                                    {
                                        <tr>
                                            <td>@dataRow["QuestionID"]</td>
                                            <td>@dataRow["QuestionText"]</td>
                                            <td>@dataRow["QuestionLevel"]</td>
                                            <td>@dataRow["OptionA"]</td>
                                            <td>@dataRow["OptionB"]</td>
                                            <td>@dataRow["OptionC"]</td>
                                            <td>@dataRow["OptionD"]</td>
                                            <td>@dataRow["CorrectOption"]</td>
                                            <td>@dataRow["QuestionMarks"]</td>

                                            <td>@dataRow["IsActive"]</td>
                                            <td>@dataRow["UserName"]</td>

                                            <td>@dataRow["Created"]</td>
                                            <td>@dataRow["Modified"]</td>
                                            <td>
                                                <a asp-controller="MST_Question" asp-action="QuestionForm" class="btn btn-primary btn-sm">
                                                    <i class="bi bi-pencil-fill"></i>Edit

                                                </a>
                                                <a asp-controller="MST_Question" asp-action="QuestionDelete" asp-route-QuestionID="@dataRow["QuestionID"]" class="btn btn-danger btn-sm">
                                                    <i class="bi bi-trash">Delete</i>
                                                </a>

                                            </td>
                                        </tr>

                                    }
                            </tbody>
                               
                            </table>
                        <!-- End Table with stripped rows -->
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </section>
