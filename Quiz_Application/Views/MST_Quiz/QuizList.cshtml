@model DataTable
@using System.Data
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Quiz List</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-Controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active">Data</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <div>
                            <h5 class="card-title">Search Quiz</h5>

                            <form class="row g-3">
                                <div class="col-md-4">
                                    <label for="userName" class="form-label">Quiz Name</label>

                                    <input type="text" class="form-control  border border-black">
                                </div>
                                <div class="col-md-4">
                                    <label for="userName" class="form-label">Min Question</label>

                                    <input type="text" class="form-control  border border-black" >
                                </div>
                                <div class="col-md-4">
                                    <label for="userName" class="form-label">Max Question</label>

                                    <input type="text" class="form-control  border border-black">
                                </div>
                                <div class="col-md-4">
                                    <label for="quizdate" class="form-label">Quiz Date</label>
                                    <input type="date" class="form-control" id="quizdate" name="quizdate">
                                </div>
                                <div class="text-start">
                                    <button type="submit" class="btn btn-success">Search</button>
                                    <button type="reset" class="btn btn-danger">Reset</button>
                                </div>
                            </form><!-- End No Labels Form -->
                        </div>
                    </div>
                </div>
            </div>
    </section>
<br />


    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <span class="text-danger">@TempData["ErrorMessage"]</span>

                        <a class="btn btn-success float-end mb-2 mt-3" asp-area="" asp-controller="MST_Quiz" asp-action="QuizForm">Add Quiz</a>

                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <h2 class="mt-3">Quiz list</h2>


                            <thead>
                                            <tr>
                                                <th>QuizID</th>
                                                <th>Quiz Name</th>
                                                <th>Total Questions</th>
                                                <th>Quiz Date</th>
                                                <th>User Name</th>
                                                <th>Created</th> 
                                                <th>Modified</th>
                                                <th>Action</th>
                                            </tr>
                            </thead>
                                        <tbody>
                                            @foreach (DataRow dataRow in Model.Rows)
                                            {
                                                <tr>
                                                    <td>@dataRow["QuizID"]</td>
                                                    <td>@dataRow["QuizName"]</td>
                                                    <td>@dataRow["TotalQuestions"]</td>
                                                    <td>@dataRow["QuizDate"]</td>
                                                    <td>@dataRow["UserName"]</td>
                                                    <td>@dataRow["Modified"]</td>
                                                    <td>@dataRow["Created"]</td>
                                        <td>
                                            <a asp-controller="MST_Quiz" asp-action="QuizForm" class="btn btn-primary">
                                                <i class="bi bi-pencil-fill"></i>Edit

                                            </a>
                                            <a asp-controller="MST_Quiz" asp-action="QuizDelete" asp-route-QuizID="@dataRow["QuizID"]" class="btn btn-danger btn-xs">
                                                <i class="bi bi-trash">Delete</i>
                                            </a>

                                        </td>

                                                </tr>

                               
                                            }
                                        </tbody>
                                  
                                </div>

                         </table>
                    
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>
    </main>

