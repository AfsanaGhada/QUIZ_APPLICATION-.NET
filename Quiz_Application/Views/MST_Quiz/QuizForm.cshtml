@model Quiz_Application.Models.Quiz

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Add/Edit Quiz</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-Controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Layouts</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-100">

                <div class="card">
                    <div class="card-body">

                        <!-- Horizontal Form -->
                        <body>
                            <div class="container mt-5">
                                <h2 class="mb-4">Add/Edit Quiz</h2>
                                <form action="#" method="POST">
                                    @* <div class="mb-3"> *@
                                    @*     <label for="quizid" class="form-label">Quiz id</label> *@
                                    @*     <input type="text" class="form-control" id="quizid" name="quizid" required> *@
                                    @* </div> *@
                                    <div class="mb-3">
                                        <label for="quizname" class="form-label">
                                            <span style="color: red;">*</span>  Quiz Name
                                        </label>
                                        <input asp-for="QuizName" type="text" class="form-control" placeholder="Enter a Quiz Name">
                                        <span asp-validation-for="QuizName" class="form-text text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label for="totalquestions" class="form-label">
                                            <span style="color: red;">*</span>Total Questions
                                        </label>
                                        <input asp-for="TotalQuestions" type="number" class="form-control">
                                        <span asp-validation-for="TotalQuestions" class="form-text text-danger"></span>
                                    </div>
                                    <div class="mb-3"> 
                                         <label for="quizdate" class="form-label">
                                            <span style="color: red;">*</span>Quiz Date
                                        </label>
                                        <input asp-for="QuizDate" type="date" class="form-control">
                                        <span asp-validation-for="QuizDate" class="form-text text-danger"></span>

                                     </div>
                                    <div class="mb-3">
                                        <label for="userName" class="form-label">
                                            <span style="color: red;">*</span>User Id

                                        </label>
                                        <input asp-for="UserID" type="number" class="form-control">
                                        <span asp-validation-for="UserID" class="form-text text-danger"></span>

                                    </div>
                                    @* <div class="mb-3"> *@
                                    @*     <label for="created" class="form-label">Created</label> *@
                                    @*     <input type="datetime-local" class="form-control" id="created" name="created" required> *@
                                    @* </div> *@
                                    @* <div class="mb-3"> *@
                                    @*     <label for="modified" class="form-label">Modified</label> *@
                                    @*     <input type="datetime-local" class="form-control" id="modified" name="modified" required> *@
                                    @* </div> *@

                                    <button type="submit" class="btn btn-success">Submit</button>
                                    <a class="btn btn-danger" asp-area="" asp-controller="MST_Quiz" asp-action="QuizList">Cancle</a>
                                    
                                </form>
                            </div>

                        </body>
                        <!-- End Horizontal Form -->

                    </div>
                </div>
                </div>
                </div>
                </section>
                </main>
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

}