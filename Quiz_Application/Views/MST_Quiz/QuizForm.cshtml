<main id="main" class="main">

    <div class="pagetitle">
        <h1>QuizForm Layouts</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-Controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Layouts</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-100">

                <div class="card">
                    <div class="card-body">

                        <!-- Horizontal Form -->
                        <body>
                            <div class="container mt-5">
                                <h2 class="mb-4">Quiz Information Form</h2>
                                <form action="#" method="POST">
                                    <div class="mb-3">
                                        <label for="quizid" class="form-label">Quiz ID</label>
                                        <input type="text" class="form-control" id="quizid" name="quizid" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="quizname" class="form-label">Quiz Name</label>
                                        <input type="text" class="form-control" id="quizname" name="quizname" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="totalquestions" class="form-label">Total Questions</label>
                                        <input type="number" class="form-control" id="totalquestions" name="totalquestions" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="quizdate" class="form-label">Quiz Date</label>
                                        <input type="date" class="form-control" id="quizdate" name="quizdate" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="userid" class="form-label">User ID</label>
                                        <input type="text" class="form-control" id="userid" name="userid" required>
                                    </div>
                                    @* <div class="mb-3"> *@
                                    @*     <label for="created" class="form-label">Created</label> *@
                                    @*     <input type="datetime-local" class="form-control" id="created" name="created" required> *@
                                    @* </div> *@
                                    @* <div class="mb-3"> *@
                                    @*     <label for="modified" class="form-label">Modified</label> *@
                                    @*     <input type="datetime-local" class="form-control" id="modified" name="modified" required> *@
                                    @* </div> *@
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <a class="btn btn-danger" asp-area="" asp-controller="MST_Quiz" asp-action="QuizList">Cancle</a>

                                </form>
                            </div>

                        </body>
                        <!-- End Horizontal Form -->

                    </div>
                </div>
