                                    @* </div> *@

                                    <!-- Submit Button -->
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <a class="btn btn-danger" asp-area="" asp-controller="MST_QuestionLevel" asp-action="QuestionLevelList">Cancle</a>

                                </form>
                            </div>

                            
                        </body>
